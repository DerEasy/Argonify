<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.easy.argonify">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Argonify">
        <activity
            android:name=".Settings.Applock.Password.RequestPasswordActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".Settings.Applock.Password.SetPasswordActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Settings.Applock.Pattern.RequestPatternActivity"
            android:exported="true" />
        <activity
            android:name=".Settings.Applock.Pattern.SetPatternActivity"
            android:exported="true" />
        <activity
            android:name=".Settings.Applock.ApplockPickerActivity"
            android:exported="true" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".Main.MainActivity"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PassGen.PassGenActivity"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>